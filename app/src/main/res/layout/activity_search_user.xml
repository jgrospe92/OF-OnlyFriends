<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchUser">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchedUserRecyclerView"
        android:layout_width="412dp"
        android:layout_height="422dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchViewFname" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewFname"
        android:layout_width="329dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/layout_search_bg"
        app:iconifiedByDefault="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Search Names Here..." />

</androidx.constraintlayout.widget.ConstraintLayout>