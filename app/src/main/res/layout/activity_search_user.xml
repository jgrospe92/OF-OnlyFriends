<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchUser">

    <EditText
        android:id="@+id/searchUserEditText"
        android:layout_width="278dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/layout_search_bg"
        android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
        android:ems="10"
        android:hint="Search User"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cancelTextView"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:text="Cancel"
        android:textAlignment="center"
        android:textColor="#4c9eeb"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/searchUserEditText"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchedUserRecyclerView"
        android:layout_width="409dp"
        android:layout_height="415dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchUserEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>